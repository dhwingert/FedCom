<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/historyListIdTextView"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="History ID"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/historyMoveTextView"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Move"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/historyPlayerNameTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Player name"
            android:textSize="10sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/historyShipTypeTextView"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/historyShipNameTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Ship name"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/historyKeyTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Action Key"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/historyValueTextView"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Action Value"
            android:textSize="10sp"
            />

    </LinearLayout>
</merge>
