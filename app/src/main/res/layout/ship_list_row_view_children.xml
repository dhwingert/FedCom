<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shipListIdTextView"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/shipListTypeTextView"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/shipListNameTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            style="@style/LabelForEditText14"
            android:layout_marginRight="3dp"
            android:id="@+id/shipListInitLblTextView"
            />

        <TextView
            android:id="@+id/shipListInitValTextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            style="@style/LabelForEditText14"
            android:layout_marginRight="0dp"
            android:text="@string/label_speed_short"
            />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:inputType="numberSigned"
            android:maxLength="3"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:id="@+id/shipListSpeedEditText"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/shipListAddedTextView"
            android:layout_weight="3"
            android:layout_width="0px"
            style="@style/LabelForEditText14"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
</merge>
